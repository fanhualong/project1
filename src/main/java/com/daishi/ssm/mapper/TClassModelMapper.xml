<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.daishi.ssm.dao.TClassModelMapper">
    <resultMap id="BaseResultMap" type="com.daishi.ssm.pojo.TClassModel">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="tname" property="tname" jdbcType="VARCHAR"/>
        <result column="enable" property="enable" jdbcType="INTEGER"/>
        <result column="createTime" property="createtime" jdbcType="TIMESTAMP"/>
    </resultMap>
    <sql id="Base_Column_List">
        id, tname, enable, createTime
    </sql>

    <select id="selectAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_class
    </select>
    <!-- 根据主键id查询班级信息 -->
    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer">
        select
        <include refid="Base_Column_List"/>
        from t_class
        where id = #{id,jdbcType=INTEGER}
    </select>

    <!-- 查询数据库中的班级的总记录数 -->

    <select id="selectClassCount" resultType="int">
        select count(id) from t_class
    </select>

    <!-- 查询全部的班级对象 -->
    <select id="selectClassAll" resultMap="BaseResultMap" parameterType="hashmap">
        select
        <include refid="Base_Column_List"/>
        from t_class ORDER BY id limit #{currIndex} , #{m}

    </select>
    <!-- deleteClass根据班级名称删除班级 -->
    <delete id="deleteClass" parameterType="java.lang.String">
        delete from t_class
        where tname= #{tname,jdbcType=VARCHAR}
    </delete>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
        delete from t_class
        where id = #{id,jdbcType=INTEGER}
    </delete>
    <!-- 插入班级对象 -->
    <insert id="insert" parameterType="com.daishi.ssm.pojo.TClassModel">
        <selectKey keyProperty="id" resultType="int" order="AFTER">
            select LAST_INSERT_ID() <!-- 查询当前自增住家 -->
        </selectKey>
        insert into t_class (id, tname, enable,
        createTime)
        values (#{id}, #{tname}, #{enable},
        #{createtime})
    </insert>
    <insert id="insertSelective" parameterType="com.daishi.ssm.pojo.TClassModel">
        insert into t_class
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="tname != null">
                tname,
            </if>
            <if test="enable != null">
                enable,
            </if>
            <if test="createtime != null">
                createTime,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id,jdbcType=INTEGER},
            </if>
            <if test="tname != null">
                #{tname,jdbcType=VARCHAR},
            </if>
            <if test="enable != null">
                #{enable,jdbcType=INTEGER},
            </if>
            <if test="createtime != null">
                #{createtime,jdbcType=TIMESTAMP},
            </if>
        </trim>
    </insert>
    <update id="updateByPrimaryKeySelective" parameterType="com.daishi.ssm.pojo.TClassModel">
        update t_class
        <set>
            <if test="tname != null">
                tname = #{tname,jdbcType=VARCHAR},
            </if>
            <if test="enable != null">
                enable = #{enable,jdbcType=INTEGER},
            </if>
            <if test="createtime != null">
                createTime = #{createtime,jdbcType=TIMESTAMP},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>
    <update id="updateByPrimaryKey" parameterType="com.daishi.ssm.pojo.TClassModel">
        update t_class
        set tname = #{tname,jdbcType=VARCHAR},
        enable = #{enable,jdbcType=INTEGER},
        createTime = #{createtime,jdbcType=TIMESTAMP}
        where id = #{id,jdbcType=INTEGER}
    </update>
</mapper>
        <p>设计+前端开发：赵岚稹
</p>
	<p>后端开发：汪武斌</p>
    </div>
</footer>
<script>
$(function(){
	checktype(1);
	})
	function checktype(typeId){
	var url="${pageContext.request.contextPath}/course/selectRoom.do"
	var $table=$("table");
	var data={n:typeId,m:10};
		$.ajax({
			   type: "POST",
			   url: url,
			   data:data,
			   success: function(msg){
				   var t="";
				   	t=t+'<tr><th scope="col">ID</th>';
					t=t+'<th scope="col">教室名称</th>';
					t=t+'<th scope="col">操作</th>';
					t=t+"</tr>";
				   $table.empty(); 
				 
			     $(msg).each(function(k,v){
			    	t+="<tr><td>" ;
			    	t+=(k+1);
			    	t+="</td><td>";
			    	t+=v.roomname;
			    	t+="</td><td>";
			    	t+='<a href="#" class="change">修改</a>&nbsp;';
			    	t+='<a href="${pageContext.request.contextPath}/course/deleteRoom.do?roomname='+v.roomname+'" onclick="return del()" class="del">删除</a>';
			    	t+="</td></tr>";
			     })
			     $table.append($(t));
			   }
			});
}
function del(){
	if(confirm("确定要删除吗？")){
		return true;
	}else{
		return false;
	}
}
</script>
</body>
</html>

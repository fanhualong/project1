<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.daishi.ssm.dao.CourseModelMapper" >
  <resultMap id="BaseResultMap" type="com.daishi.ssm.pojo.CourseModel" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="tname" property="tname" jdbcType="VARCHAR" />
    <result column="enable" property="enable" jdbcType="INTEGER" />
    <result column="creatTime" property="creattime" jdbcType="TIMESTAMP" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, tname, enable, creatTime
  </sql>
  <!-- 查询全部课程 -->
  <select id="selectCourseAll" resultMap="BaseResultMap">
  
  	select 
    <include refid="Base_Column_List" />
    from t_course ORDER BY id limit #{n},#{m}
  </select>
  
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from t_course
    where id = #{id,jdbcType=INTEGER}
  </select>
  <!-- 根据课程名称删除课程 -->
  <delete id="deleteByPrimaryKey" parameterType="java.lang.String" >
    delete from t_course
    where tname = #{tname}
  </delete>
  
  <!-- 添加课程 -->
  <insert id="insert" parameterType="com.daishi.ssm.pojo.CourseModel" >
	    <selectKey keyProperty="id" resultType="int" order="AFTER" >
	  		 	select LAST_INSERT_ID()<!-- 查询当前表的最大的ID号 -->
	  </selectKey>
    insert into t_course (tname, enable, creatTime)
    values (#{tname}, #{enable}, #{creattime})
  </insert>
  <insert id="insertSelective" parameterType="com.daishi.ssm.pojo.CourseModel" >
    insert into t_course
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        id,
      </if>
      <if test="tname != null" >
        tname,
      </if>
      <if test="enable != null" >
        enable,
      </if>
      <if test="creattime != null" >
        creatTime,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        #{id,jdbcType=INTEGER},
      </if>
      <if test="tname != null" >
        #{tname,jdbcType=VARCHAR},
      </if>
      <if test="enable != null" >
        #{enable,jdbcType=INTEGER},
      </if>
      <if test="creattime != null" >
        #{creattime,jdbcType=TIMESTAMP},
      </if>
    </trim>
  </insert>
 
 
   <!-- 修改课程名称 -->
  <update id="updateByPrimaryKeySelective" parameterType="com.daishi.ssm.pojo.CourseModel" >
    update t_course
    <set >
      <if test="tname != null" >
        tname = #{tname,jdbcType=VARCHAR},
      </if>
      <if test="enable != null" >
        enable = #{enable,jdbcType=INTEGER},
      </if>
      <if test="creattime != null" >
        creatTime = #{creattime,jdbcType=TIMESTAMP},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>
  <update id="updateByPrimaryKey" parameterType="com.daishi.ssm.pojo.CourseModel" >
    update t_course
    set tname = #{tname,jdbcType=VARCHAR},
      enable = #{enable,jdbcType=INTEGER},
      creatTime = #{creattime,jdbcType=TIMESTAMP}
    where id = #{id,jdbcType=INTEGER}
  </update>
</mapper>
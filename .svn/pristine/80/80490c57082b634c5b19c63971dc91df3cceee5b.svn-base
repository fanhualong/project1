package com.daishi.ssm.controller;

import java.util.Date;

import javax.servlet.http.HttpSession;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.SessionAttribute;

import com.daishi.ssm.pojo.TeacherModel;
import com.daishi.ssm.service.impl.TeacherServiceImpl;

@Controller
@RequestMapping("teacher")
public class XieTeacherController {
	@Autowired
	private TeacherServiceImpl teacherServiceImpl;
	
	public TeacherServiceImpl getTeacherServiceImpl() {
		return teacherServiceImpl;
	}

	
	@RequestMapping(value = "/addTeacher", method = RequestMethod.POST)
	public String addTeacher(TeacherModel model) {
		System.out.println(model.getLoginname());
		model.setCreatetime(new Date());
		model.setEnable(1);
		model.setType(1);
		teacherServiceImpl.addTeacher(model);
		System.out.println("添加成功");
		return "adminIndex";
	}
	
	
}
